<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:orientation="vertical"
    android:background="#E5FBCC"
    tools:context=".MainActivity2">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textColor="#673AB7"
        android:text="ID A ACTUALIZAR: "
        android:layout_marginBottom="10dp"
        android:padding="50dp"/>

    <EditText
        android:id="@+id/actualizarlugar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Lugar"
        android:layout_marginBottom="10dp"/>

    <EditText
        android:id="@+id/actualizarhora"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Hora"
        android:layout_marginBottom="10dp"/>

    <EditText
        android:id="@+id/actualizarfecha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Fecha"
        android:layout_marginBottom="10dp"/>

    <EditText
        android:id="@+id/actualizardescripcion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="DescripciÃ³n"
        android:layout_marginBottom="10dp"
        android:paddingBottom="90dp"/>
    <Button
        android:id="@+id/button4"
        android:layout_width="170dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="10dp"
        android:drawableRight="@drawable/regreso"
        android:drawablePadding="8dp"
        android:text="Regresar"
        android:textColor="@android:color/white"
        app:backgroundTint="#D48CF3"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="120dp"

        />

    <Button
        android:id="@+id/button3"
        android:layout_width="170dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="190dp"
        android:layout_marginTop="-70dp"
        android:layout_marginBottom="0dp"
        android:drawableLeft="@drawable/actualizar"
        android:drawablePadding="8dp"
        android:text="actualizar"
        android:textColor="@android:color/white"
        app:backgroundTint="#D48CF3" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/nota"
        android:layout_marginLeft="190dp"
        android:layout_marginTop="70dp"/>


</LinearLayout>